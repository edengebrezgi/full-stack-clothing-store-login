            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="message" name="msg">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %> -->

</div>
<section class="CashierContainer">


  <div class="CashierTitle">
    <h2>Cashier: Input Order Below</h2>
  </div>
  <form class="CashierTitle"action="/messages" method="POST">
    <input class="nameTwo" type="text" value="" placeholder="customer name" name="name">
    <input class="orderTwo" type="text" placeholder="type of clothing" name="order" >
    <br>
    <label for="espresso">Tshirt</label>
    <input type="radio" placeholder="Espresso Shot" name="espresso">
    <label for="caramel">Jeans</label>
    <input type="radio" placeholder="Caramel Pump" name="caramel">
    <label for="sugar">Dresses</label>
    <input type="radio" placeholder="sugar" name="sugar">
    <label for="cream">Shoes</label>
    <input type="radio" placeholder="Cream" name="cream">
    <label for="milk">Hats</label>
    <input type="radio" placeholder="Milk" name="milk">
    <br>
    <select class="Size" name="size">
      <option  value="Small">Small</option>
      <option value="Medium">Medium</option>
      <option value="Large">Large</option>
    </select>

    <button type="submit">Submit</button>
  </form>
  </section>
<script src="main.js"></script>

</body>
</html>
